<tr>
  <td>
    <%= image_tag(cart_item.product.display_image) %>
  </td>
  <td>
    <%= cart_item.product.name %>
  </td>
  <td>
    <%= cart_item.product.price %> x
  </td>
  <td>
    <%= number_field_tag :quantity, cart_item.quantity %>
  </td>
  <td id="cart-price-<%= cart_item.id %>" data-price="<%= cart_item.product.price %>">
    <%= cart_item.total %>$
  </td>
  <td>
    <%= link_to cart_item_path(cart_item.id), remote: true, method: :delete, data: { confirm:
      t("admin.destroy_user.cf_delete"), id: "delete-cart-item" } do %>
      <%= image_tag "remove.png" , class: "icon-remove" %>
    <% end %>
  </td>
</tr>
<hr class="light-100">
<br/>
