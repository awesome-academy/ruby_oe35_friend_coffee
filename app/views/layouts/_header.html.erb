<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag(Settings.home.path_img, class: "logo"), friendcoff_path %>
    <nav>
      <%= link_to t(".en"), locale: :en %>
      <%= link_to t(".vi"), locale: :vi %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home.home_index"), friendcoff_path %>
        <li><%= link_to t("home.about_index"), about_path %>
        <li><%= link_to t("home.product_index"), products_path %></li>
        <% if logged_in? %>
          <% if admin_user? %>
            <li><%= link_to t("user.text"), users_path %></li>
            <li><%= link_to t("admin.manager.text"), admin_root_url %></li>
          <% end %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
              <div class="img">
                <%= gravatar_for @current_user, size: Settings.users_helper.size_img1 %>
                <span class="name">
                  <%= current_user.name %>
                  <b class="caret"></b>
                </span>
              </div>
            <% end %>
            <div class="dropdown-menu">
              <li><%= link_to t("user.profile"), current_user %></li>
              <li><%= link_to t("user.change_info"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("signin.signout"), signout_path %>
              </li>
            </div>
          </li>
        <% else %>
          <li><%= link_to t("header.signup_index"), signup_path %> /
          <li><%= link_to t("signup.login_site"), signin_path %></li>
        <% end %>
        <li id="cart">
          <%= render "shared/count_cart" %>
        </li>
      </ul>
    </nav>
  </div>
</header>
