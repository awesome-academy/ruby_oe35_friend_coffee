<% provide :title, t("signin.forget_pass.title") %>
<h1><%= t "signin.forget_pass.title" %></h1>
<div class="signup">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: password_resets_path(params[:id]) do |f| %>
      <%= render "shared/error_messages" %>
      <%= hidden_field_tag :email, @user.email %>
      <%= f.label :password, t("signup.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :password_confirmation, t("signup.password_cf") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <%= f.submit t("signup.forget_pass.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
