<div>
  <%= form_for @product do |f| %>
    <div class="form-group">
      <%= f.label :name, t("product.name") %>
      <%= f.text_field :name, class: "form-control", placeholder: t("product.placeholder.name") %>
    </div>
    <div class="form-group">
      <%= f.label :information, t("product.information") %>
      <%= f.text_field :information, class: "form-control", placeholder: t("product.placeholder.infor") %>
    </div>
    <div class="form-group">
      <%= f.label :price, t("product.price") %>
      <%= f.text_field :price, class: "form-control", placeholder: t("product.placeholder.price") %>
    </div>
    <div class="form-group">
      <%= f.label :old_price, t("product.old_price") %>
      <%= f.text_field :old_price, class: "form-control", placeholder: t("product.placeholder.old_price") %>
    </div>
    <%= f.select :category_id, Category.pluck(:name, :id), include_blank: false %>
    <h3><%= t "product.image_field" %></h3>
    <div class="custom-file">
      <%= f.file_field :image %>
    </div>
    <%= f.submit t("product.edit_info"), class: "btn btn-primary" %>
  <% end %>
</div>
